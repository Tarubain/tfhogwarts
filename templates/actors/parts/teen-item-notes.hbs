<div class="items-hideout flexrow">
    <div class="items info-group">
        <div class="section-header flexrow">
            <h4 class="section-header">{{localize "tfhogwarts.items"}}</h4>
            
            <div class="item-control">
                <a class="item-control item-create" data-type="item" data-trait="item" title="{{localize "tfhogwarts.newItem"}}">
                    <i class="fas fa-plus"></i>
                </a>
            </div>
        </div>

        <ol class="info-list">
            <li class="iconic-item flexrow">
                <div class="item-name flexrow">
                    {{localize "tfhogwarts.iconic"}}
                    <input name="system.iconicItem.desc" type="text" value="{{data.system.iconicItem.desc}}"/>
                </div>
                <div class="item-plus">+</div>
                <div class="item-bonus">{{system.iconicItem.bonus}}</div>
                <div class="item-control">&nbsp;</div>
            </li>

            {{#each bonusItems as |item id|}}
            <li class="info-item flexrow item" data-item-id="{{item._id}}" draggable="true">
                <input class="item-name inline-edit" data-field="name" type="text" value="{{item.name}}"/>
                
                <div class="item-plus">+</div>
                
                <input class="item-bonus inline-edit" data-field="bonus" type="text" value="{{item.system.bonus}}" data-dtype="Number"/>
                <input class="item-bonus inline-edit" data-field="slots" type="text" value="{{item.system.slots}}" data-dtype="Number"/>
                
                <div class="item-control">
                    <a class="item-open">
                        <i class="fas fa-edit"></i>
                    </a>
                    
                    <a class="item-control item-delete" data-type="item" data-trait="item" title="{{localize "tfhogwarts.delete"}}">
                        <i class="fas fa-minus"></i>
                    </a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>

    
</div>
