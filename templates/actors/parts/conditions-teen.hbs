 <div class="flexrow">
    <div class="conditions flexcol">
        <div class="section-header">{{localize "tfhogwarts.conditions"}}</div>

        <div class="flexcol">
            <div class="info-item flexrow">{{localize "tfhogwarts.upset"}}
                <label class="imgCheck">
                    {{#unless data.system.upset}}
                    <img class="toggle-boolean" data-toggle="upset" src="systems/tfhogwarts/img/box_not_checked.png" height="18px" width="18px">
                    {{/unless}}
                
                    {{#if data.system.upset}}
                    <img class="toggle-boolean" data-toggle="upset" src="systems/tfhogwarts/img/box_checked.png" height="18px" width="18px">
                    {{/if}}
                </label>
            </div>

            <div class="info-item flexrow">{{localize "tfhogwarts.scared"}} 
                <label class="imgCheck">
                    {{#unless data.system.scared}}
                    <img class="toggle-boolean" data-toggle="scared" src="systems/tfhogwarts/img/box_not_checked.png" height="18px" width="18px">
                    {{/unless}}
                
                    {{#if data.system.scared}}
                    <img class="toggle-boolean" data-toggle="scared" src="systems/tfhogwarts/img/box_checked.png" height="18px" width="18px">
                    {{/if}}
                </label>
            </div>

            <div class="info-item flexrow">{{localize "tfhogwarts.exhausted"}} 
                <label class="imgCheck">
                    {{#unless data.system.exhausted}}
                    <img class="toggle-boolean" data-toggle="exhausted" src="systems/tfhogwarts/img/box_not_checked.png" height="18px" width="18px">
                    {{/unless}}
                
                    {{#if data.system.exhausted}}
                    <img class="toggle-boolean" data-toggle="exhausted" src="systems/tfhogwarts/img/box_checked.png" height="18px" width="18px">
                    {{/if}}
                </label>
            </div>

            <div class="info-item flexrow">{{localize "tfhogwarts.injured"}} 
                <label class="imgCheck">
                    {{#unless data.system.injured}}
                    <img class="toggle-boolean" data-toggle="injured" src="systems/tfhogwarts/img/box_not_checked.png" height="18px" width="18px">
                    {{/unless}}
                    
                    {{#if data.system.injured}}
                    <img class="toggle-boolean" data-toggle="injured" src="systems/tfhogwarts/img/box_checked.png" height="18px" width="18px">
                    {{/if}}
                </label>
            </div>
                
            <div class="special-item flexrow">
                {{localize "tfhogwarts.broken"}}
                <label class="imgCheck">
                    {{#unless data.system.broken}}
                    <img class="toggle-boolean" data-toggle="broken" src="systems/tfhogwarts/img/box_not_checked.png" height="18px" width="18px">
                    {{/unless}}
                    
                    {{#if data.system.broken}}
                    <img class="toggle-boolean" data-toggle="broken" src="systems/tfhogwarts/img/box_checked.png" height="18px" width="18px">
                    {{/if}}
                </label>
            </div>
        </div>
    </div>

    <div class="scars flexcol info-group">
        <div class="section-header flexrow">
            <h4 class="section-header">{{localize "tfhogwarts.scars"}}</h4>
            <p class="col-head">{{localize "tfhogwarts.accepted"}}</p>
            
            <div class="item-control">
                <a class="item-control item-create" data-type="scar" data-trait="scar" title="{{localize "tfhogwarts.newScar"}}">
                    <i class="fas fa-plus"></i>
                </a>
            </div>
        </div>

         <ol class="info-list">
            {{#each scars as |scar id|}}
            <li class="info-item flexrow item" data-item-id="{{scar._id}}">
                <input class="scar-name inline-edit" data-field="name" type="text" value="{{name}}"/>
                <input class="scar-desc inline-edit" data-field="system.description" type="text" value="{{scar.system.description}}"/>
                
                <label class="imgCheck">
                    {{#unless scar.system.accepted}}
                    <img class="toggle-boolean" data-toggle="accepted" src="systems/tfhogwarts/img/box_not_checked.png" height="18px" width="18px">
                    {{/unless}}
                    
                    {{#if scar.system.accepted}}
                    <img class="toggle-boolean" data-toggle="accepted" src="systems/tfhogwarts/img/box_checked.png" height="18px" width="18px">
                    {{/if}}
                </label>
                
                <div class="item-control">
                    <a class="item-open">
                        <i class="fas fa-edit"></i>
                    </a>
                
                    <a class="item-delete" data-type="scar" data-trait="scar" title="{{localize "tfhogwarts.delete"}}">
                        <i class="fas fa-minus"></i>
                    </a>
                </div>
            </li>
            {{/each}}
        </ol>
    </div>
</div>
