            <div class="experience-group">
                <div class="section-header experience">
                    {{localize "tfhogwarts.experience"}}
                </div>

                <div class="exp-boxes flexrow" title="{{localize "tfhogwarts.addexp"}}">
                    {{#times 10}}
                    <div class="exp-box">
                        <div class="img-container">
                            {{#if (gte ../data.system.exp @index)}}
                            <img src="systems/tfhogwarts/img/box_checked.png" height="18px" width="18px">
                            {{/if}}
                            {{#unless (gte ../data.system.exp @index)}}
                            <img src="systems/tfhogwarts/img/box_not_checked.png" height="18px" width="18px">
                            {{/unless}}
                        </div>
                    </div>
                    {{/times}}
                </div>
            </div>
        </div>
        <div class="flexcol">
            <div class="sheet-tabs tabs flexrow" data-group="primary">
                <b class="item" data-tab="main">{{localize "tfhogwarts.main"}}</b>
                <b class="item" data-tab="note">{{localize "tfhogwarts.notes"}}</b>
            </div>
            <div class="sheet-body">
                <div class="tab" data-group="primary" data-tab="main">
                    <div class="main flexcol">
                        {{> "systems/tfhogwarts/templates/actors/parts/core-info.hbs"}}
                        {{> "systems/tfhogwarts/templates/actors/parts/conditions-teen.hbs"}}
                        {{> "systems/tfhogwarts/templates/actors/parts/relationships.hbs"}}
                        {{> "systems/tfhogwarts/templates/actors/parts/item-hideout.hbs"}} 
                        {{> "systems/tfhogwarts/templates/actors/parts/moneybag.hbs"}} 
                    </div>
                </div>
                <div class="tab" data-group="primary" data-tab="note">
                    <div class="notes-group info-group">
                        <h4 class="section-header">{{localize "tfhogwarts.notes"}}</h4>
                        <div class="kid-notes">
                            {{editor data.system.notes.value target="system.notes.value" button=true owner=owner editable=true }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
