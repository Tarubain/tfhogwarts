<form class="{{cssClass}} flexcol" autocomplete="off">
    {{!-- Item Sheet Header --}} 
    <div class="item-sheet flexrow">
        <div class="item-sidebar">
            <div class="chap-number">
                <div class="black-bar">&nbsp;</div>
                <div class="dark-bar">&nbsp; </div>
            </div>
        </div>   

        <div class="item-info">
            <h1 class="us-text">{{localize "tfhogwarts.scar"}}</h1>
            
            <div class="header-details flexcol">
                <lable>{{localize "tfhogwarts.scar"}}:</lable>
                <h1 class = "charname">
                    <input name="name" type="text" value="{{item.name}}"/>
                </h1>
            </div>

            <div class="item-desc flexcol">
                <label>{{localize "tfhogwarts.shortDesc"}}:</label>
                <input class="relationship-desc" name="system.description" data-field="data.system.description" type="text" value="{{data.system.description}}"/>
            </div>

            <div class="item-notes">
                <label>Notes:</label>
                <textarea id="notes" name="system.notes" rows="6" wrap="soft">{{data.system.notes}}</textarea>
            </div>
        </div>
    </div>
</form>
